extends layout

block content
	.container
		h1.page-header Linhas
		p.bs-description
			| Relação de linhas de ônibus cadastradas na API de Transporte Público.
		.bs-example
			table.table.table-striped
				thead
					tr
						th #
						th ID da empresa
						th Linha
						th Nme
						th(colspan='2')
				tbody
				each linha in circulares
					tr
						td= linha.id
						td= linha.id_empresa
						td= linha.linha
						td= linha.nome
						td
							a.button(href='#', title='Editar')
								i.glyphicon.glyphicon-edit
								span.text Editar
						td
							a.button(href='#', title='Deletar')
								i.glyphicon.glyphicon-trash
								span.text Deletar