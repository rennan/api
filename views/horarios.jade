extends layout

block content
	.container
		h1.page-header Horários
		p.bs-description
			| Você pode pesquisar os horários de uma via pesquisando o código da linha de ônibus ou digitando o nome da linha.
			br 
			| Basta apenas selecionar o modo de busca e digitar o texto.
		form#buscar-horarios(role='form')
			.row
				.col-xs-3
					label(for='modo-busca') Selecione o modo de busca
					select#modo-busca.form-control
						option(value='linha', selected) Por número da linha
						option(value='nome') Por nome da linha
				.col-xs-2
					label(for='texto-busca') Digite o texto
					input#texto-busca.form-control(required)
			.form-group
			button(type='submit').btn.btn-default.submit Buscar
		hr
		.table-result