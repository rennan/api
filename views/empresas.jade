extends layout

block content
	.container
		h1.page-header Empresas
		p.bs-description
			| Relação de empresas cadastradas na API de Transporte Público.
		.bs-example
			table.table.table-striped
				thead
					tr
						th #
						th Código cidade
						th Nome
						th(colspan='2')
				tbody
					each empresa in empresas
						tr
							td= empresa.id
							td= empresa.id_cidade
							td= empresa.nome
							td
								a.button(href='#', title='Editar')
									i.glyphicon.glyphicon-edit
									span.text Editar
							td
								a.button(href='#', title='Deletar')
									i.glyphicon.glyphicon-trash
									span.text Deletar